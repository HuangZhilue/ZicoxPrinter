<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ZicoxPrinter.Views.Components.PrintParameters.DrawText1Content"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">
    <StackLayout
        BindingContext="{x:Reference this}"
        Orientation="Vertical"
        Spacing="5">
        <Grid
            ColumnSpacing="15"
            HorizontalOptions="FillAndExpand"
            RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalOptions="Center" 
                HorizontalOptions="EndAndExpand"
                Text="DrawType" />
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                HorizontalOptions="FillAndExpand">
                <Label
                    HorizontalOptions="Start"
                    Text="{Binding Parameters.DrawType}"
                    VerticalOptions="Center" />
                <Button
                    Padding="10,5"
                    Command="{Binding RemoveThisCommand}"
                    HorizontalOptions="End"
                    MinimumHeightRequest="0"
                    MinimumWidthRequest="0"
                    Text="移除"
                    VerticalOptions="Center" />
            </Grid>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="Text"
                VerticalOptions="CenterAndExpand" />
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Parameters.Text}"
                TextChanged="Entry_TextChanged" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="TextX"
                VerticalOptions="CenterAndExpand" />
            <Entry
                Grid.Row="2"
                Grid.Column="1"
                Keyboard="Numeric"
                Text="{Binding Parameters.TextX}"
                TextChanged="Entry_TextChanged" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="TextY"
                VerticalOptions="CenterAndExpand" />
            <Entry
                Grid.Row="3"
                Grid.Column="1"
                Keyboard="Numeric"
                Text="{Binding Parameters.TextY}"
                TextChanged="Entry_TextChanged" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="TextFonts"
                VerticalOptions="CenterAndExpand" />
            <Picker
                Grid.Row="4"
                Grid.Column="1"
                ItemsSource="{Binding TextFonts}"
                SelectedIndexChanged="Picker_SelectedIndexChanged"
                SelectedItem="{Binding Parameters.FontSize}" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="Rotate"
                VerticalOptions="CenterAndExpand" />
            <Picker
                Grid.Row="5"
                Grid.Column="1"
                ItemsSource="{Binding TextRotates}"
                SelectedIndexChanged="Picker_SelectedIndexChanged"
                SelectedItem="{Binding Parameters.Rotate}" />

            <Label
                Grid.Row="6"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="Bold"
                VerticalOptions="CenterAndExpand" />
            <CheckBox
                Grid.Row="6"
                Grid.Column="1"
                CheckedChanged="CheckBox_CheckedChanged"
                HorizontalOptions="EndAndExpand"
                IsChecked="{Binding Parameters.Bold}" />

            <Label
                Grid.Row="7"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="Reverse"
                VerticalOptions="CenterAndExpand" />
            <CheckBox
                Grid.Row="7"
                Grid.Column="1"
                CheckedChanged="CheckBox_CheckedChanged"
                HorizontalOptions="EndAndExpand"
                IsChecked="{Binding Parameters.Reverse}" />

            <Label
                Grid.Row="8"
                Grid.Column="0"
                HorizontalOptions="EndAndExpand"
                Text="Underline"
                VerticalOptions="CenterAndExpand" />
            <CheckBox
                Grid.Row="8"
                Grid.Column="1"
                CheckedChanged="CheckBox_CheckedChanged"
                HorizontalOptions="EndAndExpand"
                IsChecked="{Binding Parameters.Underline}" />
        </Grid>
    </StackLayout>
</ContentView>
